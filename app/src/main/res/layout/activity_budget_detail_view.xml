<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.deekshasharma.pennyapp.SummaryDetailViewActivity">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_blue_grey_800"
        android:id="@+id/tableRow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="91dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="BUDGETED"
            android:id="@+id/budgeted_text"
            android:textSize="30dip"
            android:textColor="#fff8ffd3"
            android:paddingTop="20dp"
            android:layout_marginLeft="20dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$300"
            android:id="@+id/detailBudget_getBudgeted"
            android:layout_alignBottom="@+id/detailBudget_getGrpIcon"
            android:layout_alignLeft="@+id/detailBudget_getGrpName"
            android:layout_alignStart="@+id/detailBudget_getGrpName"
            android:layout_weight="0.14"
            android:textColor="#fff8ffd3"
            android:layout_marginLeft="30dip"
            android:textSize="30dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/avail_text"
            android:textColor="#fff8ffd3"
            android:textSize="30dip"
            android:layout_marginLeft="200dip"
            android:text="AVAILABLE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/detailBudget_getAvailable"
            android:textColor="#fff8ffd3"
            android:layout_marginLeft="30dip"
            android:textSize="30dip" />
    </TableRow>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/budget_detail_list_view"
        android:layout_marginTop="160dip" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="10dip"
        android:layout_height="90dip"
        android:background="@android:color/holo_green_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"></LinearLayout>

    <ImageView
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:id="@+id/detailBudget_getGrpIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/linearLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gifts &amp; Donations"
        android:id="@+id/detailBudget_getGrpName"
        android:textSize="30dip"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/linearLayout"
        android:layout_toStartOf="@+id/linearLayout"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="9.33%"
        android:id="@+id/detailBudget_getSpent"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tableRow"
        android:layout_alignEnd="@+id/tableRow"
        android:layout_marginRight="74dp"
        android:layout_marginEnd="74dp"
        android:textSize="30dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SPENT"
        android:id="@+id/spent_text"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignRight="@+id/detailBudget_getSpent"
        android:layout_alignEnd="@+id/detailBudget_getSpent"
        android:textSize="30dip" />

</RelativeLayout>
