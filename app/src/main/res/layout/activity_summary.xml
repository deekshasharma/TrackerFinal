<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:id="@+id/summary_header">
        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.38"
            android:text="MONTH"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="30dp"
            android:layout_alignTop="@+id/num_of_trans"
            android:layout_toLeftOf="@+id/num_of_trans"
            android:layout_toStartOf="@+id/num_of_trans"
            android:layout_marginRight="107dp"
            android:layout_marginEnd="107dp"
            android:textColor="#fff8ffd3"
            android:paddingRight="50dip" />

        <TextView
            android:id="@+id/num_of_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="59dp"
            android:layout_marginTop="79dp"
            android:text="DAYS LEFT"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="30dp"
            android:textColor="#fff8ffd3" />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/month"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/month"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:text="YEAR"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="30dp"
            android:textColor="#fff8ffd3" />

        <TextView
            android:id="@+id/get_months_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_above="@+id/month"
            android:layout_toLeftOf="@+id/num_of_trans"
            android:layout_toStartOf="@+id/num_of_trans"
            android:layout_marginRight="129dp"
            android:layout_marginEnd="129dp"
            android:textColor="#fff8ffd3"
            android:paddingRight="50dip" />

        <TextView
            android:id="@+id/get_days_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/month"
            android:layout_alignLeft="@+id/num_of_trans"
            android:layout_alignStart="@+id/num_of_trans"
            android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff8ffd3" />

        <TextView
            android:id="@+id/get_year_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/year"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="73dp"
            android:layout_marginStart="73dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff8ffd3" />

    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summary_list_view"
        android:layout_marginTop="230dp" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summary_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/background_material_dark"
        android:id="@+id/tableRow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TOTAL SPENT"
            android:id="@+id/total_spent_text"
            android:textSize="40dip"
            android:textColor="#fff8ffd3"
            android:paddingTop="20dp"
            android:layout_marginLeft="100dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$2300"
            android:id="@+id/get_total_spent_summary"
            android:textColor="#fff8ffd3"
            android:textSize="40dip"
            android:layout_marginLeft="40dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="40dip"></TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Spent By Group"
        android:id="@+id/spent_by_group"
        android:layout_below="@+id/tableRow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"
        android:textSize="30dip" />

</RelativeLayout>
