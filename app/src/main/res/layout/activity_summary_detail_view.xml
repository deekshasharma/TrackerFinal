<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.deekshasharma.pennyapp.SummaryDetailViewActivity">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_material_dark"
        android:id="@+id/tableRow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="91dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TOTAL SPENT"
            android:id="@+id/total_spent_text"
            android:textSize="40dip"
            android:textColor="#fff8ffd3"
            android:paddingTop="20dp"
            android:layout_marginLeft="100dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/get_total_spent_summary_detail"
            android:textColor="#fff8ffd3"
            android:textSize="40dip"
            android:layout_marginLeft="40dp" />
    </TableRow>


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summary_detail_list_view"
        android:layout_marginTop="230dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="10dip"
        android:layout_height="90dip"
        android:background="@android:color/holo_green_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"></LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/get_detail_grp_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gifts &amp; Donations"
        android:id="@+id/get_detail_grp_name"
        android:textSize="30dip"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/linearLayout"
        android:layout_toStartOf="@+id/linearLayout"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TRANSACTIONS"
        android:id="@+id/num_of_transactions"
        android:layout_marginLeft="124dp"
        android:layout_marginStart="124dp"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout"
        android:textSize="30dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10"
        android:id="@+id/get_detail_num_trans"
        android:layout_alignBottom="@+id/get_detail_grp_name"
        android:layout_alignLeft="@+id/num_of_transactions"
        android:layout_alignStart="@+id/num_of_transactions"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:textSize="30dip" />

</RelativeLayout>
