<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Framelayout to display Fragments -->
    <FrameLayout
        android:id="@+id/frame_budgetcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Listview to display slider menu -->
    <ListView
        android:id="@+id/list_bugetslidermenu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector"
        android:background="@color/list_background"/>




    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:id="@+id/relativeLayout">
        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.38"
            android:text="MONTH"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="30dp"
            android:layout_alignTop="@+id/transactions"
            android:layout_toLeftOf="@+id/transactions"
            android:layout_toStartOf="@+id/transactions"
            android:layout_marginRight="107dp"
            android:layout_marginEnd="107dp"
            android:textColor="#fff8ffd3"
            android:paddingRight="50dip" />

        <TextView
            android:id="@+id/transactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="59dp"
            android:layout_marginRight="59dp"
            android:layout_marginTop="79dp"
            android:text="DAYS LEFT"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="30dp"
            android:textColor="#fff8ffd3" />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/month"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/month"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"
            android:text="YEAR"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="30dp"
            android:textColor="#fff8ffd3" />

        <TextView
            android:text="FEB"
            android:id="@+id/getMonths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_above="@+id/month"
            android:layout_toLeftOf="@+id/transactions"
            android:layout_toStartOf="@+id/transactions"
            android:layout_marginRight="129dp"
            android:layout_marginEnd="129dp"
            android:textColor="#fff8ffd3"
            android:paddingRight="50dip" />

        <TextView
            android:text="3"
            android:id="@+id/get_transactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/month"
            android:layout_alignLeft="@+id/transactions"
            android:layout_alignStart="@+id/transactions"
            android:layout_marginLeft="47dp"
            android:layout_marginStart="47dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff8ffd3" />

        <TextView
            android:text="2015"
            android:id="@+id/getYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/year"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="73dp"
            android:layout_marginStart="73dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff8ffd3" />

    </RelativeLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/android:list"
        android:layout_marginTop="190dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ADD NEW BUDGET"
        android:id="@+id/textView"
        android:textSize="40dip"
        android:layout_below="@+id/relativeLayout"
        android:width="340dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="200dp" />

</RelativeLayout>





</android.support.v4.widget.DrawerLayout>
